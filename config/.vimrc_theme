" Color scheme
set termguicolors
let ayucolor="light"
colorscheme ayu

" Make status line nice
hi StatusLine   ctermbg=0 ctermfg=15
hi StatusLineNC ctermbg=0 ctermfg=7

" Configure lightline
let g:lightline = {
  \ 'colorscheme': 'one',
  \ 'active': {
  \   'left': [
  \     [ 'mode', 'paste' ],
  \     [ 'gitbranch', 'readonly', 'filename', 'modified' ]
  \   ]
  \ },
  \ 'component_function': {
  \   'gitbranch': 'gitbranch#name'
  \ },
\ }

